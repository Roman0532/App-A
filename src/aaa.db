CREATE TABLE USER (
ID INTEGER AUTO_INCREMENT,
LOGIN VARCHAR(255),
PASSWORD VARCHAR(255),
SALT VARCHAR(255),
constraint USER_PK PRIMARY KEY ("ID"),
UNIQUE(LOGIN)
);

CREATE TABLE USER_RES(
ID INTEGER AUTO_INCREMENT PRIMARY KEY,
USER_ID INTEGER,
ROLE VARCHAR(255),
PATH VARCHAR(255),
constraint USER_RES_FK FOREIGN KEY (USER_ID)
REFERENCES USER (ID)
);

CREATE INDEX user_role on USER_RES(USER_ID, ROLE);

CREATE TABLE ACCOUNTING(
ID INTEGER AUTO_INCREMENT PRIMARY KEY,
USER_RES_ID INTEGER,
DATA_START DATE,
DATA_END DATE,
constraint ACC_FK FOREIGN KEY (USER_RES_ID)
REFERENCES USER_RES (ID)
);
